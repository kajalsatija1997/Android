<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kj.satijas.orderingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/food_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/food_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login" />
        <activity android:name=".customer" />
        <activity android:name=".BookTable" />
        <activity android:name=".Menu" />
        <activity android:name=".Indian" />
        <activity android:name=".Continental" />
        <activity android:name=".SouthIndian" />
        <activity android:name=".Chinese" />
        <activity android:name=".CartActivity" />
        <activity android:name=".OrderStatus" />

        <service
            android:name=".Service.ListenOrders"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>