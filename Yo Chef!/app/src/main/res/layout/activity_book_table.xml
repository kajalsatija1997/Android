<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookTable"
    android:background="@drawable/book_table">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Book your table"
        android:textSize="20sp"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="102dp"
        android:layout_toStartOf="@+id/title"
        android:text="hello"
        android:textColor="@color/LightGreen"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btnTable1"
            android:layout_width="187dp"
            android:layout_height="139dp"
            android:layout_above="@+id/tvTable1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:background="@drawable/button_changer"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/tvTable1"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTable2"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="TABLE 1(Corner)"
            android:textColor="#fff" />

        <ToggleButton
            android:id="@+id/btnTable3"
            android:layout_width="187dp"
            android:layout_height="139dp"
            android:layout_above="@+id/tvTable3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/button_changer"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/tvTable3"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnTable5"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="TABLE 3(Center)"
            android:textColor="#fff" />

        <ToggleButton
            android:id="@+id/btnTable5"
            android:layout_width="187dp"
            android:layout_height="139dp"
            android:layout_above="@+id/tvTable5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/button_changer"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/tvTable5"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="TABLE 5(Corner)"
            android:textColor="#fff" />

    </LinearLayout>


  <LinearLayout
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="200dp">

      <ToggleButton
          android:id="@+id/btnTable2"
          android:layout_width="187dp"
          android:layout_height="139dp"
          android:layout_alignParentEnd="true"
          android:background="@drawable/button_changer"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:textOff=""
          android:textOn="" />

      <TextView
          android:id="@+id/tvTable2"
          android:layout_width="181dp"
          android:layout_height="wrap_content"
          android:layout_above="@+id/btnTable3"
          android:layout_alignParentEnd="true"
          android:gravity="center"
          android:text="TABLE 2(Corner)"
          android:textColor="#fff"/>

      <ToggleButton
          android:textOff=""
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:textOn=""
          android:layout_marginTop="30dp"
          android:id="@+id/btnTable4"
          android:layout_width="187dp"
          android:layout_height="139dp"
          android:layout_alignParentEnd="true"
          android:layout_alignTop="@+id/btnTable3"
          android:background="@drawable/button_changer"/>

      <TextView
          android:id="@+id/tvTable4"
          android:layout_width="181dp"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignTop="@+id/tvTable3"
          android:gravity="center"
          android:text="TABLE 4(Center)"
          android:textColor="#fff"/>

      <ToggleButton
          android:textOff=""
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:textOn=""
          android:id="@+id/btnTable6"
          android:layout_marginTop="30dp"
          android:layout_width="187dp"
          android:layout_height="139dp"
          android:layout_alignParentEnd="true"
          android:layout_alignTop="@+id/btnTable5"
          android:background="@drawable/button_changer" />

      <TextView
          android:id="@+id/tvTable6"
          android:layout_width="181dp"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="59dp"
          android:gravity="center"
          android:text="TABLE 6(Corner)"
          android:textColor="#fff" />


  </LinearLayout>



    <info.hoang8f.widget.FButton
        android:id="@+id/btnConfirmBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/viewColor"
        android:text="CONFIRM BOOKING"
        android:layout_alignParentBottom="true"
        android:textColor="@color/viewColor"
        android:textSize="20sp"
        app:cornerRadius="4dp"
        app:fButtonColor="@color/btnCustomer"
        app:shadowEnabled="true"
        app:shadowHeight="5dp" />


</RelativeLayout>